// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)

{
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "llama3.1:latest"
    },
    "version": "2"
  },

  "base_keymap": "VSCode",
  "vim_mode": true,
  "projects_online_by_default": true,

  "tab_size": 2,
  "preferred_line_length": 80,
  "soft_wrap": "none",

  // Font stuff for the UI
  "ui_font_size": 16,
  "ui_font_family": "JetBrainsMonoNL Nerd Font",
  // "ui_font_family": "Source Code Pro",

  // Font stuff for the edit buffer
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  // "buffer_font_family": "Source Code Pro",

  // Make sure to save my changes
  "autosave": "on_focus_change",
  "format_on_save": "on",

  // Theme stuff
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "JetBrains New Dark"
  },

  // Terminal stuff
  "terminal": {
    "blinking": "off",
    // "font_family": "JetBrainsMonoNL Nerd Font",
    "font_family": "Source Code Pro"
  },

  // Settings for my prefered languages
  "languages": {
    "C": {
      "format_on_save": "language_server",
      "preferred_line_length": 64,
      "soft_wrap": "preferred_line_length"
    }
  }
}
