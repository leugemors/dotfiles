alias ports='netstat -tulpan'
alias pscpu='ps auxf | sort -nr -k 3 | head -5'
alias psmem='ps auxf | sort -nr -k 4 | head -5'
alias showip='curl ipv4.icanhazip.com'
alias ssha='eval $(ssh-agent) && ssh-add'
alias tm='terramate'
alias tf='terraform'

