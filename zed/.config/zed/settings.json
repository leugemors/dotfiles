// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // Standard theme
  "theme": "Catppuccin Mocha",
  "icon_theme": "Colored Zed Icons Theme Dark",

  // Appearance stuff
  // "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "project_panel": { "entry_spacing": "standard" },
  "tabs": { "file_icons": true },
  "git": { "inline_blame": { "enabled": false } },

  // Font stuff
  // "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_family": "SauceCodePro Nerd Font",
  "buffer_font_size": 10.0,
  "buffer_font_weight": 400,
  "buffer_line_height": { "custom": 1.4 },
  "buffer_font_features": { "calt": false }, // ligatures
  "ui_font_family": "SauceCodePro Nerd Font",
  "ui_font_size": 10.0,

  // Keymap and Editor stuff
  "base_keymap": "VSCode",
  "vim_mode": true,
  "tab_size": 2,
  "hard_tabs": false,
  "current_line_highlight": "all",

  // LLM Models
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5",
    },
    "model_parameters": [],
  },

  // Miscelaneous
  "format_on_save": "on",
  "session": {
    "trust_all_worktrees": true,
  },
}
